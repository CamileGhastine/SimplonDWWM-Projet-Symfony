{% extends 'base.html.twig' %}

{% block title %}Hello ArtistController!
{% endblock %}

{% block body %}

	<div class="text-center">
		{% for category in categories %}
			<a href="#" role="button" class="btn btn-outline-{{ category.color }} mx-1">{{ category.name }}</a>
		{% endfor %}
	</div>

	<div class="row my-5">
		{% for artist in artists %}
			<div class="col-4">
				<div class="card border-{{ artist.category ? artist.category.color : 'dark' }} mb-3">
					<div class="card-header text-end"><span class="badge rounded-pill bg-{{ artist.concert ? 'secondary' : 'primary' }}">{{ artist.concert ? 'Concert' : 'Music de rue' }}</span></div>
					<div class="card-body">
						<h4 class="card-title">{{ artist.name }}</h4>
						<p class="card-text">{{ artist.description | slice(1, 100) }} ...</p>
                        <p><a href="#">DÃ©couvrir l'artiste</a></p>
                    </div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
